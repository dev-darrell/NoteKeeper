<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.darrell.dev.notekeeper.roomdb.activities.CourseActivity">

    <EditText
        android:id="@+id/text_course_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/course_title"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/auto_course_id_switch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checked="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/auto_course_id"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@+id/text_course_title"
        app:layout_constraintStart_toStartOf="@+id/text_course_title"
        app:layout_constraintTop_toBottomOf="@+id/text_course_title" />

    <EditText
        android:id="@+id/text_course_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/course_id"
        android:inputType="textShortMessage|text"
        android:singleLine="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/auto_course_id_switch"
        app:layout_constraintStart_toStartOf="@+id/auto_course_id_switch"
        app:layout_constraintTop_toBottomOf="@+id/auto_course_id_switch" />

</androidx.constraintlayout.widget.ConstraintLayout>